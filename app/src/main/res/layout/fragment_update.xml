<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp_bg"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="20dp"
    tools:context=".UpdateFragment">

    <!-- Title -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:background="#E0FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAddPetTitle"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Add a Pet"
            android:textAlignment="center"
            android:textColor="#11515B"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgUpdate"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/take_pic_logo" />

        <View
            android:id="@+id/divider2"
            android:layout_width="335dp"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPetType"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/baloo_bhaijaan"
                        android:text="Pet Type"
                        android:textColor="#13504F"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerPetTypeUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:layout_marginBottom="12dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/typeImageView"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/pets" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPetBreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:text="Breed"
                    android:textColor="#13504F"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtUpdateBreed"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Enter breed"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="312dp"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Pet Name"
            android:textColor="#1F6862"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtUpdateName"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:hint="Enter pet name"
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVaccinationDates"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Vaccination Dates"
            android:textColor="#1F6862"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtUpdateVaccinationDates"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Select dates (e.g., 2023-01-01)"
            android:inputType="none"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="312dp"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvFoodAmount"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Feeding Schedule"
            android:textColor="#1F6862"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/pp_am" />

                <CheckBox
                    android:id="@+id/amUpdateCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/pp_noon" />

                <CheckBox
                    android:id="@+id/noonUpdateCB"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/pp_pm" />

                <CheckBox
                    android:id="@+id/pmUpdateCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtUpdateFoodAmount"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:hint="quantity"
                android:inputType="text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Pet Type Label -->

    <!-- Pet Type Spinner -->

    <!-- Pet Name Label -->

    <!-- Pet Name -->

    <!-- Pet Breed Label -->

    <!-- Pet Breed -->

    <!-- Vaccination Dates Label -->

    <!-- Vaccination Dates -->

    <!-- Food Amount Label -->

    <!-- Food Amount -->

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#083E3C"
        android:text="Update"
        android:textSize="20sp" />

    <!-- Image Preview -->

    <!-- Action Buttons -->
</LinearLayout>
