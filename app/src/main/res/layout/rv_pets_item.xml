<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_container"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="87dp"
                android:layout_height="84dp"
                android:layout_gravity="center_vertical"
                android:maxWidth="75dp"
                android:maxHeight="75dp"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:gravity="center_vertical"
                    android:text="Pet Name"
                    android:textColor="#1F686A"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/tvTypeItem"
                            android:layout_width="72dp"
                            android:layout_height="69dp" />

                        <TextView
                            android:id="@+id/tvBreedItem"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:text="Breed"
                            android:textColor="#1F686A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider7"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="178dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvVaccinationDatesItem"
                            android:layout_width="177dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:text="Vaccination Dates"
                            android:textColor="#1F686A"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="166dp"
                            android:layout_height="43dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/amIV"
                                android:layout_width="58dp"
                                android:layout_height="41dp"
                                app:srcCompat="@drawable/pp_am" />

                            <ImageView
                                android:id="@+id/noonIV"
                                android:layout_width="11dp"
                                android:layout_height="42dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pp_noon" />

                            <ImageView
                                android:id="@+id/pmIV"
                                android:layout_width="4dp"
                                android:layout_height="43dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/pp_pm" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvFeedAmt"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:text="Food Quantity"
                            android:textColor="#1F686A"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
