<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#175454"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/take_pic_logo" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/baloo_bhaijaan"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#175454" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/baloo_bhaijaan"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#175454" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo_bhaijaan"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#175454" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo_bhaijaan"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#175454" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#26928F"
            android:fontFamily="@font/baloo_bhaijaan"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSignInPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:gravity="center"
            android:text="Already have an account? Click here to sign in"
            android:textColor="#175454"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
