<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".AddFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAddPetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Add a Pet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Type Label -->
    <TextView
        android:id="@+id/tvPetType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pet Type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddPetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Type Spinner -->
    <Spinner
        android:id="@+id/spinner_pet_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPetType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Name Label -->
    <TextView
        android:id="@+id/tvPetName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pet Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_pet_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Name -->
    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter pet name"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPetName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Breed Label -->
    <TextView
        android:id="@+id/tvPetBreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/edtName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Breed -->
    <EditText
        android:id="@+id/edtBreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter breed"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPetBreed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vaccination Dates Label -->
    <TextView
        android:id="@+id/tvVaccinationDates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vaccination Dates"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/edtBreed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vaccination Dates -->
    <EditText
        android:id="@+id/edtVaccinationDates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select dates (e.g., 2023-01-01)"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvVaccinationDates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Food Amount Label -->
    <TextView
        android:id="@+id/tvFoodAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food Amount Per Meal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/edtVaccinationDates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Food Amount -->
    <EditText
        android:id="@+id/edtFoodAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter schedule (e.g., morning)"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvFoodAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/take_pic_logo"
        app:layout_constraintTop_toBottomOf="@id/edtFoodAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imgAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPickImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pick Image"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Save Pet"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>